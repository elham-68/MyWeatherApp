<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_96sdp"
    android:layout_height="@dimen/_130sdp"
    android:orientation="vertical">
<soup.neumorphism.NeumorphCardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:neumorph_shadowElevation="@dimen/_1sdp"
    app:neumorph_shapeType="flat"
    app:neumorph_strokeWidth="@dimen/_2sdp"
    app:neumorph_strokeColor="@color/transparent"
    android:layout_margin="@dimen/_2sdp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/txt_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dayname"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            />

        <ImageView
            android:id="@+id/img_daily"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_64sdp"
            android:layout_gravity="center_horizontal"/>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_gravity="center_horizontal">

               <androidx.appcompat.widget.AppCompatTextView
                   android:id="@+id/txt_maxTemp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/_4sdp"
                   android:textSize="@dimen/_10sdp"/>

               <androidx.appcompat.widget.AppCompatTextView
                   android:id="@+id/txt_minTemp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:textSize="@dimen/_10sdp"/>
           </LinearLayout>
</LinearLayout>
</soup.neumorphism.NeumorphCardView>

</LinearLayout>

















